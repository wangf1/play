<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="openui5.tutorial.wt.walkthrough.App"
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin"
						width="auto">
						<content>
							<Text text="{i18n>showHelloButtonText}" />
							<Button text="Say Hello" press="onShowHello" class="sapUiSmallMarginEnd">
							</Button>

							<Input value="{/recipient/name}" valueLiveUpdate="true"
								width="60%" />
							<Text text="Hello {/recipient/name}" class="sapUiSmallMargin" />
						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</core:View>